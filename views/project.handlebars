<div class="review-container">
  <h1>{{title}}</h1>
  <p>{{content}}</p>
  <p>Posted by {{username}}</p>

  <h2>Comments</h2>
  {{#each comments}}
    <div class="comment">
      <p>{{content}}</p>
      <p>Posted by {{username}}</p>
    </div>
  {{/each}}

  <form class="comment-form">
    <textarea name="content" id="commentText" class="comment-textarea"></textarea>
    <button type="submit" class="comment-button">Add Comment</button>
  </form>

  {{#if logged_in}}
    {{!-- <a href="/dashboard" class="dashboard-link">Dashboard</a>
    <a id="logout" class="logout-link">Logout</a> --}}
  {{else}}
    <a href="/login" class="login-link">Login</a>
    <a href="/signup" class="signup-link">Signup</a>
  {{/if}}
</div>

  
<script src="/js/comment.js"></script>
<script src="/js/logout.js"></script>
