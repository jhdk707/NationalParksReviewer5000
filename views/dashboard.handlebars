<section class="section">
  <div class="container is-centered">
    <div class="columns is-multiline is-mobile">
      <div class="column is-full">
        <div class="box">
          <h2 class="title">Create New Review</h2>
          <form class="new-post-form">
            <div class="field">
              <label class="label" for="post-title">Park Name & State </label>
              <div class="control">
                <input class="input" placeholder="Enter Park Name & State here..." type="text" id="post-title" name="post-title" />
              </div>
            </div>
            <div class="field">
              <label class="label" for="post-body">Write your Review! </label>
              <div class="control">
                <textarea class="textarea" placeholder="Start typing review here..." id="post-body" name="post-body"></textarea>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <button class="button is-primary" type="submit">Create</button>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="column is-full">
        <div class="box">
          {{#if posts.length}}
          <h2 class="title">Your Reviews</h2>
          <ol>
            {{#each posts as |post|}}
            <li>
              {{> post-info post}}
            </li>
            {{/each}}
          </ol>
          {{else}}
          <p>No reviews yet.</p>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</section>

<script src="/js/addPost.js"></script>
