<section class="section">
  <div class="columns is-centered">
    <div class="column is-half">
      <div class="box">
        <h2 class="title">Create New Review</h2>

        <form class="new-post-form">
          <div class="field">
            <label class="label" for="post-title">Park Name</label>
            <div class="control">
              <input class="input" placeholder="Park Name" type="text" id="post-title" name="post-title" />
            </div>
          </div>

          <div class="field">
            <label class="label" for="post-body">Park State</label>
            <div class="control">
              <textarea class="textarea" placeholder="Park State" id="post-body" name="post-body"></textarea>

            </div>
          </div>

          <div class="field">
            <div class="control">
              <button class="button is-primary" type="submit">Create</button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <div class="column is-half">
      <div class="box">
        {{#if posts.length}}
        <h2 class="title">Your Reviews</h2>
        <ol>
          {{#each posts as |post|}}
          <li>
            {{> post-info post}}
          </li>
          {{/each}}
        </ol>
        {{else}}
        <p>No reviews yet.</p>
        {{/if}}
      </div>
    </div>
  </div>
</section>
