<section class="section">
  <div class="container">
    <div class="columns is-centered is-vcentered">
      <form class="login-form column is-two-thirds">
        <div class="box">
          <div class="field">
            <label for="email-login"></label>
            <div class="control has-icons-left">
              <input type="email" id="email-login" name="email" class="input is-normal is-hovered" placeholder="Email">
              <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
              </span>
            </div>
          </div>
          <div class="field">
            <label for="password-login"></label>
            <div class="control has-icons-left">
              <input type="password" id="password-login" name="password" class="input is-normal is-hovered" placeholder="Password">
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <button class="button is-primary is-fullwidth" id="login-btn" type="submit">Log in</button>
            </div>
          </div>
          <p class="text-center">Don't have an account? <a href="/signup">Sign up here</a></p>
        </div>
      </form>
      <script src="/js/login.js"></script>
    </div>
  </div>
</section>
