<section class="section">
  <div class="container">
    <div class="columns is-centered is-vcentered">
      <div class="box has-background-light">
        <form class="signup-form column is-full">
          <div class="field">
            <label for="username-signup"></label>
            <div class="control has-icons-left">
              <input class="input is-normal is-hovered" type="text" id="username-signup" name="username" placeholder="Username">
              <span class="icon is-small is-left">
                <i class="fas fa-user"></i>
              </span>
            </div>
          </div>

          <div class="field">
            <label for="email-signup"></label>
            <div class="control has-icons-left">
              <input class= "input is-normal is-hovered" type="email" id="email-signup" name="email" placeholder="Email"/>
              <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
              </span>
            </div>
          </div>

          <div class="field">
            <label for="password-signup"></label>
            <div class="control has-icons-left">
              <input class="input is-normal is-hovered" type="password" id="password-signup" name="password" placeholder="Password"/>
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <button class="button is-info is-fullwidth" type="submit">Sign Up</button>
            </div>
          </div>
        </form>
        <script src="/js/signup.js"></script>
      </div>
    </div>
  </div>
</section>
